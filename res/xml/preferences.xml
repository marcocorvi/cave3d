      android:dialogMessage="@string/pref_selection_radius_summary"
      />

    <android.preference.CheckBoxPreference
      android:key="CAVE3D_MEASURE_DIALOG"
      android:title="@string/pref_measure_dialog_title"
      android:summary="@string/pref_measure_dialog_summary"
      android:dialogTitle="@string/pref_measure_dialog_title"
      />

    <android.preference.CheckBoxPreference
      android:key="CAVE3D_STATION_TOAST"
      android:title="@string/pref_station_toast_title"
      android:summary="@string/pref_station_toast_summary"
      android:dialogTitle="@string/pref_station_toast_title"
      />
  </android.preference.PreferenceCategory>

  <android.preference.PreferenceCategory
    android:title="@string/category_grid"
    >
    <android.preference.CheckBoxPreference
      android:key="CAVE3D_GRID_ABOVE"
      android:title="@string/pref_grid_above_title"
      android:summary="@string/pref_grid_above_summary"
      android:dialogTitle="@string/pref_grid_above_title"
      />

    <android.preference.EditTextPreference
      android:key="CAVE3D_GRID_EXTENT"
      android:title="@string/pref_grid_extent_title"
      android:summary="@string/pref_grid_extent_summary"
      android:dialogTitle="@string/pref_grid_extent_title"
      android:dialogMessage="@string/pref_grid_extent_summary"
      />
  </android.preference.PreferenceCategory>

  <android.preference.PreferenceCategory
    android:title="@string/category_surface"
    >

    <android.preference.EditTextPreference
       android:key="CAVE3D_DEM_BUFFER"
       android:title="@string/pref_dem_buffer_title"
       android:summary="@string/pref_dem_buffer_summary"
       android:dialogTitle="@string/pref_dem_buffer_title"
       android:dialogMessage="@string/pref_dem_buffer_summary"
       />

    <android.preference.EditTextPreference
       android:key="CAVE3D_DEM_MAXSIZE"
       android:title="@string/pref_dem_maxsize_title"
       android:summary="@string/pref_dem_maxsize_summary"
       android:dialogTitle="@string/pref_dem_maxsize_title"
       android:dialogMessage="@string/pref_dem_maxsize_summary"
       />

    <com.topodroid.Cave3D.MyListPreference
       android:key="CAVE3D_DEM_REDICE"
       android:title="@string/pref_dem_reduce_title"
       android:summary="@string/pref_dem_reduce_summary"
       android:defaultValue="1"
       android:entries="@array/demReduce"
       android:entryValues="@array/demReduceValue"
       />
  </android.preference.PreferenceCategory>

  <android.preference.PreferenceCategory
    android:title="@string/category_walls"
    >

    <android.preference.CheckBoxPreference
       android:key="CAVE3D_ALL_SPLAY"
       android:title="@string/pref_all_splay_title"
       android:summary="@string/pref_all_splay_summary"
