<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <android.preference.EditTextPreference
    android:key="CAVE3D_BASE_PATH"
    android:title="@string/pref_base_path_title"
    android:summary="@string/pref_base_path_summary"
    android:dialogTitle="@string/pref_base_path_title"
    android:dialogMessage="@string/pref_base_path_summary"
    />

  <com.topodroid.Cave3D.MyListPreference
    android:key="CAVE3D_BUTTON_SIZE"
    android:title="@string/pref_size_buttons_title"
    android:summary="@string/pref_size_buttons_summary"
    android:defaultValue="1"
    android:entries="@array/sizeButtons"
    android:entryValues="@array/sizeButtonsValue"
    />

  <android.preference.CheckBoxPreference
    android:key="CAVE3D_NEG_CLINO"
    android:title="@string/pref_neg_clino_title"
    android:summary="@string/pref_neg_clino_summary"
    android:dialogTitle="@string/pref_neg_clino_title"
    />

  <android.preference.PreferenceCategory
    android:title="@string/category_stations"
    >

    <android.preference.EditTextPreference
      android:key="CAVE3D_TEXT_SIZE"
      android:title="@string/pref_text_size_title"
      android:summary="@string/pref_text_size_summary"
      android:dialogTitle="@string/pref_text_size_title"
      android:dialogMessage="@string/pref_text_size_summary"
      />

    <android.preference.CheckBoxPreference
      android:key="CAVE3D_STATION_POINTS"
      android:title="@string/pref_station_points_title"
      android:summary="@string/pref_station_points_summary"
      android:dialogTitle="@string/pref_station_points_title"
      />

    <android.preference.EditTextPreference
      android:key="CAVE3D_STATION_SIZE"
      android:title="@string/pref_station_size_title"
      android:summary="@string/pref_station_size_summary"
      android:dialogTitle="@string/pref_station_size_title"
      android:dialogMessage="@string/pref_station_size_summary"
      />

    <android.preference.EditTextPreference
      android:key="CAVE3D_SELECTION_RADIUS"
      android:title="@string/pref_selection_radius_title"
