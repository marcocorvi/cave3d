          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:text="@string/clear"
        />
        <CheckBox android:id="@+id/powercrust_no"
          android:layout_width="wrap_content"
